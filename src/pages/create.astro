---
import SearchLayout from '../layouts/SearchLayout.astro'
import CreateNewEvidenceForm from '../components/CreateNewEvidenceForm'
import RegisterOrUserProfile from '../components/RegisterOrUserProfile'
import Footer from '../components/Footer.astro'
---

<SearchLayout>
	<div class="flex h-[60px] w-full items-center justify-end space-x-4 px-4">
		<a
			href="https://blog.arguflow.com"
			target="_blank"
			class="text-xl text-neutral-600 dark:text-neutral-200"
		>
			Blog
		</a>
		<div>
			<RegisterOrUserProfile client:only="solid-js" />
		</div>
	</div>
	<div class="mt-4 flex w-full flex-col items-center space-y-4 px-4 sm:mt-12">
		<a class="flex w-full items-center justify-center" href="/">
			<img class="w-12" src="/logo_transparent.png" alt="Logo" />
			<h1 class="text-4xl">Create New Evidence Card</h1>
		</a>
		<div class="w-full max-w-4xl px-4 sm:px-8 md:px-20">
			<CreateNewEvidenceForm client:load />
		</div>
	</div>
	<div class="flex-1"></div>
	<Footer />
</SearchLayout>
